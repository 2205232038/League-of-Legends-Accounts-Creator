{
  "extends": [
    "airbnb",
    "plugin:prettier/recommended",
    "prettier/react"
  ],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es2020": true,
    "jest": true,
    "node": true
  },
  "settings": {
    "import/core-modules": [ "electron" ] 
  },
  "rules": {
    "import/extensions": 0,
    "jsx-a11y/href-no-hash": ["off"],
    "max-len": [
      "warn",
      {
        "code": 100,
        "tabWidth": 2,
        "comments": 100,
        "ignoreComments": false,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true,
        "ignoreRegExpLiterals": true
      }
    ]
  }
}
